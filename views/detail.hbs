<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>

    <!------------------ STYLES ------------------>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
    <link rel="stylesheet" href="/static/css/materialize.min.css">
    <link rel="stylesheet" href="/static/css/listing.css">

  </head>
  <body>
    <div class="container">

      <div class="row center-align">
        <div class="col s12 center-align">
          <h1>{{restaurant.name}}</h1>
        </div><!-- .col -->
        <div class="col s12 m4 offset-m4 center-align">
          <img src="{{restaurant.image_url}}" class="responsive-img"><br>
        </div><!-- .col -->
      </div><!-- .row -->

      <div class="row">
        <div class="col s12 center-align">
          {{restaurant.atmosphere}} atmosphere | {{restaurant.parking}} parking | {{restaurant.busy}}<br><br>
        </div><!-- .col -->
        <div class="col s12">
          Map: <a href="http://maps.google.com/?q={{address}}">{{restaurant.address}}</a><br> Phone: <a href="tel:{{restaurant.phone}}">{{restaurant.phone}}</a><br><br>
          {{restaurant.description}}<br>
        </div><!-- .col -->
      </div><!-- .row -->

      <div class="divider"></div>

      <div class="row">
          <div class="col s12 center-align">
            <h2>menu hilights</h2>
          </div><!-- .col -->
            {{#each dishes}}
            <div class="col s11">
              <strong>{{this.name}}</strong>
              {{#if adventurous}}
                [Adventurous]
              {{/if}}
              {{#if shareable}}
                 [Shareable]
              {{/if}}<br>
            </div>
            <div class="col s1">
              {{this.price}}
            </div>
            <div class="col s12">
              {{this.description}}<br>
              Spiciness: {{spice}}<br><br>
            </div>
            {{/each}}
          </div><!-- .col -->
      </div><!-- .row -->
  </div><!-- .container -->

    <!------------------- SCRIPTS ------------------->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!------ NOTE: Fix reference to Google Fonts (see error in console) --->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="/static/js/axios.min.js"></script>
    <script src="/static/js/hbs-helpers.js"></script>


    <script>
    </script>
  </body>
</html>
