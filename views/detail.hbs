<div class="container">
  <div class="row center-align">
    <div class="col s12 center-align">
      <h1>{{restaurant.name}}</h1>
    </div>
    <div class="col s12 center-align">
      {{restaurant.atmosphere}} atmosphere | {{restaurant.parking}} parking | {{restaurant.busy}}
      <br><br>
    </div>
    <div class="col s10 offset-s1 m4 offset-m4 center-align">
      <img src="{{restaurant.image_url}}" class="responsive-img"><br>
    </div>
  </div><!-- .row -->

  <div class="row">
    <div class="col s12">
      {{restaurant.description}}
    </div>
  </div><!-- .row -->

  <div class="divider"></div>

  <!-- NOTE: Add dietary restriction details to dishes -->
  <div class="row">
      <div class="col s12 center-align">
        <h2>we recommend</h2>
      </div>
      {{#each dishes}}
        <div class="col s11">
          <strong>{{this.name}}</strong>
          {{#if adventurous}}
            [adventurous]
          {{/if}}
          {{#if shareable}}
             [shareable]
          {{/if}}<br>
        </div>
        <div class="col s1">
          {{this.price}}
        </div>
        <div class="col s12">
          {{this.description}}<br>
          Spicy? <img src="/static/img/spicy-{{spice}}.png" alt="icon courtesy of http://www.flaticon.com/authors/madebyoliver">
          <br><br>
        </div>
      {{/each}}
  </div><!-- .row -->

  <div class="divider"></div>

  <div class="row">
    <div class="col s12 center-align">
      <h2>location</h2>
    </div>
    <div class="col s12">
     <a href="http://maps.google.com/?q={{restaurant.address}}">
       <button class="btn-floating waves-effect waves-light"><i class="small material-icons">navigation</i></button> {{restaurant.address}}
     </a><br><br>
     <a href="tel:{{restaurant.phone}}">
       <button class="btn-floating waves-effect waves-light"><i class="small material-icons">phone</i></button> {{restaurant.phone}}
      </a><br><br>
    </div>
    <div class="col s12 center-align">
      <a href="http://maps.google.com/?q={{restaurant.address}}">
        <img src="https://maps.googleapis.com/maps/api/staticmap?markers=color:blue%7C{{restaurant.address}}&size=300x300&zoom=14&key={{map_key}}" alt="Static Map Image">
      </a>
    </div>
  </div><!-- .row -->


</div><!-- .container -->

<!------------------- SCRIPTS ------------------->
<script src="/static/js/axios.min.js"></script>
