<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>

    <!------------------ STYLES ------------------>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
    <link rel="stylesheet" href="/static/css/materialize.min.css">
    <link rel="stylesheet" href="/static/css/listing.css">

  </head>
  <body>

    <div class="container">

      <h1>{{restaurant.name}}</h1>
      <ul>
        <div class="row">
          <li>
            <div class="col s3">
              <img src="{{restaurant.image_url}}" class="responsive-img"><br>
            </div>
            <div class="col s9">
              <strong>{{restaurant.name}}</strong><br>
              {{restaurant.atmosphere}} atmosphere | {{restaurant.parking}} parking | {{restaurant.busy}}<br>
              Description: {{restaurant.description}}<br>
              <a href="http://maps.google.com/?q={{address}}">{{restaurant.address}}</a> | Phone: <a href="tel:{{restaurant.phone}}">{{restaurant.phone}}</a>
            </div>
          </li>
        </div><!-- .row -->
      </ul>
    </div><!-- .container -->

    <!-- NOTE: use this form for filter -->


    <!------------------- SCRIPTS ------------------->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
