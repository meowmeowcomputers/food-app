<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>

    <!------------------ STYLES ------------------>
    <link rel="stylesheet" href="/static/css/materialize.min.css">
    <link rel="stylesheet" href="/static/css/listing.css">

  </head>
  <body>
    <div class="container">

      <div class="row center-align">
        <div class="col s12 center-align">
          <h1>{{restaurant.name}}</h1>
        </div>
        <div class="col s10 offset-s1 m4 offset-m4 center-align">
          <img src="{{restaurant.image_url}}" class="responsive-img"><br>
        </div>
      </div><!-- .row -->

      <div class="row">
        <div class="col s12 center-align">
          {{restaurant.atmosphere}} atmosphere | {{restaurant.parking}} parking | {{restaurant.busy}}<br><br>
        </div>
        <div class="col s12">
          {{restaurant.description}}
        </div>
      </div><!-- .row -->

      <div class="divider"></div>

      <div class="row">
          <div class="col s12 center-align">
            <h2>we recommend</h2>
          </div>
          {{#each dishes}}
            <div class="col s11">
              <strong>{{this.name}}</strong>
              {{#if adventurous}}
                [adventurous]
              {{/if}}
              {{#if shareable}}
                 [shareable]
              {{/if}}<br>
            </div>
            <div class="col s1">
              {{this.price}}
            </div>
            <div class="col s12">
              {{this.description}}<br>
              <!-- NOTE: Add chili peppers for spice -->
              Spiciness: {{spice}} out of 5<br><br>
            </div>
          {{/each}}
      </div><!-- .row -->

      <div class="divider"></div>

      <div class="row">
        <div class="col s12 center-align">
          <h2>location</h2>
        </div>
        <div class="col s12">
          <!-- NOTE: Add address & Phone Icons -->
          Address: <a href="http://maps.google.com/?q={{restaurant.address}}">{{restaurant.address}}</a><br> Call: <a href="tel:{{restaurant.phone}}">{{restaurant.phone}}</a><br><br>
        </div>
        <div class="col s12 center-align">
          <a href="http://maps.google.com/?q={{restaurant.address}}">
            <img src="https://maps.googleapis.com/maps/api/staticmap?markers=color:red%7C{{restaurant.address}}&size=300x300&zoom=14&key=AIzaSyCLEmpSzgePwma5qJzhuMk1hZDOFL3JXLk" alt="Static Map Image">
          </a>
        </div>
      </div><!-- .row -->

  </div><!-- .container -->

    <!------------------- SCRIPTS ------------------->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!------ NOTE: Fix reference to Google Fonts (see error in console) --->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="/static/js/axios.min.js"></script>
    <script src="/static/js/hbs-helpers.js"></script>


    <script>
    </script>
  </body>
</html>
